    <body>
      <script type="text/javascript">
        function validate(inputField,password,msgText)
	  {
		  //see if the input value contains any text
		  if(inputField.value.length==0)
		  {
			//data is invalid, so set appropriate msg
			  if(msgText!=null)
			  msgText.innerHTML="Please enter the value";
			return false;
    }
    else if(inputField.value!==password.value)
    {
      if(msgText!=null)
			  msgText.innerHTML="Passwords do not match,Try again";
			return false; 
    }
		else
		{
		//The data is ok.so clear the message
			if(msgText!=null)
			  msgText.innerHTML=" ";
		return true;
		}
	}
        
        
      </script>
        <br>
        <br>
        <br>
<div class="container">
    <div class="row">
            <div class="col-lg-3"></div>
            <div class="well black col-xs-12 col-lg-6 " style="border:1px solid black;box-shadow: 10px 10px 5px;">
                <form action="register" method="post">
                    <div class="form-group">
                        <label> Username</label>
                        <div class="row">
                            <div class="col-xs-6">
                            <input type="text" class="form-control" name="firstname" placeholder="Firstname" required/>
                            </div>
                            <div class="col-xs-6">
                            <input type="text" class="form-control" name="lastname" placeholder="Lastname" required/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Email id</label>
                        <input type="email" class="form-control" id="email" placeholder="example@email.com" name="email" required/>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password" id="password" placeholder="************" required/>
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" name="password1" placeholder="************" required onblur="validate(this,document.getElementById('password'),document.getElementById('nm_msg'));"/>
                        <span style="color:red" id="nm_msg" class="msg"></span>
                    </div>
                    <div class="form-group">
                        <label>Phone no.:</label>
                        <input type="number" class="form-control" name="phone_no" placeholder="967585****" required/>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-info" name="submit" >SUBMIT</button>
                    </div>
                </form>
                <a href="login">Already have an account?</a>
            </div>
            <div class="col-lg-3"></div>
    </div>
